{% extends '::base.html.twig' %}
{% block header %}Ajouter un produit{% endblock %}
{% block body %}
    <div class="pure-g">
        <div class="pure-u-1-3 centrer">
            <form method="post" {{ form_enctype(form) }} class="pure-form">
                <div class="pure-control-group">
                    <label class="required labelBlock" for="ipezbo_productbundle_product_name">Name</label>
                    {{ form_widget(form.name, { 'attr': {"class":"form-control"}} ) }}
                </div>
                
                <div class="pure-control-group">
                    <label class="required labelBlock" for="ipezbo_productbundle_product_reference">Reference</label>
                    {{ form_widget(form.reference, { 'attr': {"class":"form-control"}} ) }}
                </div>
                
                <div class="pure-control-group">
                    <label class="required labelBlock" for="ipezbo_productbundle_product_description">Description</label>
                    {{ form_widget(form.description, { 'attr': {"class":"form-control"}} ) }}
                </div>
                
                <div class="pure-control-group">
                    <label class="required labelBlock" for="ipezbo_productbundle_product_quantity">Quantity</label>
                    {{ form_widget(form.quantity, { 'attr': {"class":"form-control"}} ) }}
                </div>
                
                <div class="pure-control-group">
                    <label class="required labelBlock" for="ipezbo_productbundle_product_file">File</label>
                    {{ form_widget(form.file, { 'attr': {"class":"form-control"}} ) }}
                </div>
                
                <div class="pure-control-group">
                    <label class="required labelBlock" for="ipezbo_productbundle_product_category">Category</label>
                    {{ form_widget(form.category, { 'attr': {"class":"form-control"}} ) }}
                </div>
                
                <div class="pure-control-group">
                    <label class="required labelBlock" for="ipezbo_productbundle_product_brand">Brand</label>
                        {{ form_widget(form.brand, { 'attr': {"class":"form-control"}} ) }}
                    </div>
                
                <div class="pure-control-group">
                    <label class="required labelBlock" for="ipezbo_productbundle_product_event">Event</label>
                    {{ form_widget(form.event, { 'attr': {"class":"form-control"}} ) }}
                </div>
                
                {{ form_widget(form) }}
                
                <div class="pure-control-group">
                    <input type="submit" class="pure-button pure-button-primary margeButton" />
                </div>
            </form>
            <a class="pure-button margeButton" href="{{path('ipezbo_product_homepage') }}">Retour aux produits</a>
        </div>
    </div>
{% endblock %}