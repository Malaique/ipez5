{% extends '::base.html.twig' %}
{% block header %}Liste des produits{% endblock %}

{% block body %}
    <div class="pure-g">
        <div class="pure-u-1-3 centrer">
            <table class="pure-table pure-table-bordered">
                {% for product in products %}
                    <tr><td>{{ product.name }}</td> <td><a href="{{ path('ipezbo_product_edit', {id : product.id}) }}">Editer</a></td></tr>
                {% else %}
                    Pas de produits
                {% endfor %}
                <a class="pure-button margeButton" href="{{path('ipezbo_product_add') }}">Ajouter un produit</a>
            </table>
        </div>
    </div>
{% endblock %}