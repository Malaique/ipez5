{% extends '::base.html.twig' %}
{% block header %}Liste des clients{% endblock %}
{% block body %}
    <table id="tableBrand" class="pure-table pure-table-bordered display">
        <thead><tr><th>Nom</th><th></th></tr></thead>
        <tbody>
        {% for customer in customers %}
            <tr><td>{{ customer.name }}</td><td><a class="pure-button" href="{{ path('ipezbo_customer_edit', {id : customer.id}) }}">Editer</a></td></tr>
        {% else %}
            Pas de marques
        {% endfor %}
        </tbody>
        <tfoot></tfoot>
    </table>
    <a class="pure-button margeButton" href="{{path('ipezbo_brand_add') }}">Ajouter un client</a>
{% endblock %}
    
{% block javascripts %}
    <script src="{{ asset('js/dataTable/media/js/jquery.dataTables.min.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function() {
        $('#tableBrand').dataTable();
    });
    </script>
{% endblock %}