{% extends '::base.html.twig' %}
{% block header %}Ajouter un évènement{% endblock %}
{% block body %}
<form method="post" {{ form_enctype(form) }} class="pure-form">
     <fieldset>
        <legend>Legend</legend>
            <div class="pure-g">
                <div class="pure-u-1 pure-u-md-1-3">
                    <label class="required labelBlock" for="ipezbo_eventbundle_event_name">Name</label>
                    {{ form_widget(form.name, { 'attr': {"class":"form-control"}} ) }}
                </div>

                <div class="pure-u-1 pure-u-md-1-3">
                    <label class="required labelBlock" for="ipezbo_eventbundle_event_description">Description</label>
                     {{ form_widget(form.description, { 'attr': {"class":"form-control"}} ) }}
                </div>

                <div class="pure-u-1 pure-u-md-1-3">
                    <label class="required labelBlock" for="ipezbo_eventbundle_event_street">Street</label>
                    {{ form_widget(form.street, { 'attr': {"class":"form-control"}} ) }}
                </div>

                <div class="pure-u-1 pure-u-md-1-3">
                    <label class="required labelBlock" for="ipezbo_eventbundle_event_city">City</label>
                    {{ form_widget(form.city, { 'attr': {"class":"form-control"}} ) }}
                </div>
                
                <div class="pure-u-1 pure-u-md-1-3">
                    <label class="required labelBlock" for="ipezbo_eventbundle_event_zipCode">Zip code</label>
                    {{ form_widget(form.zipCode, { 'attr': {"class":"form-control"}} ) }}
                </div>
                
                <div class="pure-u-1 pure-u-md-1-3">
                    <label class="required labelBlock" for="ipezbo_eventbundle_event_additionalDetails">Additional details</label>
                    {{ form_widget(form.additionalDetails, { 'attr': {"class":"form-control"}} ) }}
                </div>
                
                <div class="pure-u-1 pure-u-md-1-3">
                    <label class="required labelBlock" for="ipezbo_eventbundle_event_coordinatesLatitude">Coordinates latitude</label>
                    {{ form_widget(form.coordinatesLatitude, { 'attr': {"class":"form-control"}} ) }}
                </div>
                
                <div class="pure-u-1 pure-u-md-1-3">
                    <label class="required labelBlock" for="ipezbo_eventbundle_event_coordinatesLongitude">Coordinates longitude</label>
                    {{ form_widget(form.coordinatesLongitude, { 'attr': {"class":"form-control"}} ) }}
                </div>
                
                <div class="pure-u-1 pure-u-md-1-3">
                    <label class="required labelBlock">Début de l'évènement</label>
                    {{ form_widget(form.startEvent, { 'attr': {"class":"form-control"}} ) }}
                </div>
                
                <div class="pure-u-1 pure-u-md-1-3">
                    <label class="required labelBlock">Fin de l'évènement</label>
                    {{ form_widget(form.endEvent, { 'attr': {"class":"form-control"}} ) }}
                </div>
                
                <div class="pure-u-1 pure-u-md-1-3">
                    <label class="required labelBlock" for="ipezbo_eventbundle_event_backgroundColor">Background color</label>
                    {{ form_widget(form.backgroundColor, { 'attr': {"class":"form-control"}} ) }}
                </div>
                
                <div class="pure-u-1 pure-u-md-1-3">
                    <label class="required labelBlock" for="ipezbo_eventbundle_event_newsletter">Newsletter</label>
                    {{ form_widget(form.newsletter, { 'attr': {"class":"form-control"}} ) }}
                </div>
            {{ form_widget(form) }}
            </div>
    <input type="submit" class="pure-button pure-button-primary" />
     </fieldset>
</form>


    <a href="{{path('ipezbo_event_homepage') }}">Retour aux évènements</a>
{% endblock %}