{% extends '::base.html.twig' %}
{% block header %}Liste des évènements{% endblock %}
{% block body %}
            <table id="tableEvent" class="pure-table pure-table-bordered">
                <thead><tr><th>Name</th><th>Street</th><th>City</th><th>ZipCode</th><th>Autres détails</th>
                        <th>Newsletter</th><th></th><th></th></tr></thead>
                <tbody>
                {% for event in events %}
                    <tr><td>{{ event.name }}</td> 
                        <td>{{ event.street }}</td>
                        <td>{{event.city}} </td>
                        <td>{{event.zipcode}}</td>
                        <td>{{event.additionalDetails}}</td>
                        <td>{{event.newsletter.subject}}</td>
                        <td><a class="pure-button" href="{{ path('ipezbo_event_edit', {id : event.id}) }}">Editer</a></td>
                        <td><a class="pure-button" href="{{ path('ipezbo_participation_homepage', {id : event.id}) }}">Liste des participants</a></td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot></tfoot>
            </table>
            <a class="pure-button" href="{{path('ipezbo_event_add') }}">Ajouter un évènement</a>
{% endblock %}
    
{% block javascripts %}
    <script src="{{ asset('js/dataTable/media/js/jquery.dataTables.min.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function() {
        $('#tableEvent').dataTable();
    });
    </script>
{% endblock %}      