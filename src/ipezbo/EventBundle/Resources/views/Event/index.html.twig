{% extends '::base.html.twig' %}
{% block header %}Liste des évènements{% endblock %}
{% block body %}
    <div class="pure-g">
        <div class="pure-u-1-3 centrer">
            <table class="pure-table pure-table-bordered">
                {% for event in events %}
                    <tr><td>{{ event.name }}</td> <td><a href="{{ path('ipezbo_event_edit', {id : event.id}) }}">Editer</a></td>
                {% else %}
                    Pas d'évènements
                {% endfor %}
                <a href="{{path('ipezbo_event_add') }}">Ajouter un évènement</a>
            </table>
        </div>
    </div>
{% endblock %}