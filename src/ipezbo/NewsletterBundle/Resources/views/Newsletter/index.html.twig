{% extends '::base.html.twig' %}
{% block header %}Liste des newsletters{% endblock %}
{% block body %}
    <table id="tableNewsletter" class="pure-table pure-table-bordered display">
        <thead><tr><th>Objet</th><th>Corps</th><th>Destinataire(s)</th><th></th><th></th></tr></thead>
        <tbody>
            {% for newsletter in newsletters %}
                <tr><td>{{ newsletter.subject }}</td>
                    <td>{{ newsletter.message }}</td>
                    <td>{{ newsletter.expeditorEmail}}</td> 
                    <td><a class="pure-button" href="{{ path('ipezbo_newsletter_edit', {id : newsletter.id}) }}">Editer</a></td>
                    <td> <a href="{{ path('ipezbo_newsletter_test', {id : newsletter.id}) }}" class="btn btn-info btn-sm">S'envoyer un mail test</a></td>

                </tr>
            {% endfor %}
        </tbody>
        <tfoot></tfoot>
    </table>
    <a class="pure-button margeButton" href="{{path('ipezbo_newsletter_add') }}">Ajouter une newsletter</a>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/dataTable/media/js/jquery.dataTables.min.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#tableNewsletter').dataTable();
        });
    </script>
{% endblock %}      