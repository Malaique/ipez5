{% extends '::base.html.twig' %}
{% block header %}Editer une newsletter{% endblock %}
{% block body %}  
    
<div class="pure-g">
    <div class="pure-u-1-2 centrer">   
        <form class="pure-form pure-form-aligned" method="post">
            <div class="pure-control-group">
                <label class="required" for="ipezbo_newsletterbundle_newsletter_subject">Sujet</label>
                {{ form_widget(form.subject, { 'attr': {"class":"form-control"}} ) }}
            </div>

            <div class="pure-control-group">
                <label class="required" for="ipezbo_newsletterbundle_newsletter_message">Corps</label>
                <div id="mceu_15" class="mce-tinymce mce-container mce-panel" role="application" tabindex="-1" hidefocus="1" style="visibility: hidden; border-width: 1px; width: 700px;">
                    {{ form_widget(form.message, { 'attr': {"class":"form-control"}} ) }}
                </div>
            </div>

            <div class="pure-control-group">
                <label class="required" for="ipezbo_newsletterbundle_newsletter_expeditorEmail">Exp√©diteur</label>
                {{ form_widget(form.expeditorEmail, { 'attr': {"class":"form-control"}} ) }}
            </div>
            {{ form_widget(form) }}
            <div class="pure-control-group">
                <input class="pure-button pure-button-primary" type="submit">
            </div>
        </form>
        <a href="{{path('ipezbo_newsletter_homepage') }}">Retour aux newsletters</a>
        <a href="{{ path('ipezbo_newsletter_delete', { id : newsletter.id}) }}" class="button-error pure-button" id="delete-action">Supprimer la newsletter "{{ newsletter.subject }}"</a>
    </div>
</div>
    
{% endblock %}
    {% block javascripts%}
<script src="{{ asset('js/tinymce/tinymce.min.js') }}"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        skin: "charcoal",
        plugins: [
            "advlist autolink lists link image charmap print preview anchor",
            "searchreplace visualblocks code fullscreen",
            "insertdatetime media table contextmenu paste"
        ],
        toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image"
    });
</script>
{% endblock %}