{% extends '::base.html.twig' %}
{% block header %}Editer une newsletter{% endblock %}
{% block body %}
<form method="post" {{ form_enctype(form) }} class="pure-form">
        {{ form_widget(form) }}
    <input type="submit" class="pure-button pure-button-primary" />
</form>
    
    
    <a href="{{path('ipezbo_newsletter_homepage') }}">Retour aux newsletters</a>
    <a href="{{ path('ipezbo_newsletter_delete', { id : newsletter.id}) }}" class="button-error pure-button" id="delete-action">Supprimer la newsletter "{{ newsletter.subject }}"</a>

{% endblock %}
    {% block javascripts%}
<script src="{{ asset('js/tinymce/tinymce.min.js') }}"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        skin: "charcoal",
        plugins: [
            "advlist autolink lists link image charmap print preview anchor",
            "searchreplace visualblocks code fullscreen",
            "insertdatetime media table contextmenu paste"
        ],
        toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image"
    });
</script>
{% endblock %}