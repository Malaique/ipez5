{% trans_default_domain 'FOSUserBundle' %}
<div class="pure-g">
    <div class="pure-u-1-3 centrer">
        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="pure-form pure-form-aligned">
            <fieldset>
                    <div class="pure-control-group">
                        <label for="name">Nom</label>
                        {{ form_widget(form.name, { 'attr': {"class":"form-control"}} ) }}
                    </div>
                    <div class="pure-control-group">
                        <label for="surname">Prénom</label>
                        {{ form_widget(form.surname, { 'attr': {"class":"form-control"}} ) }}
                    </div>
                    <div class="pure-control-group">
                        <label for="email">Adresse e-mail</label>
                        {{ form_widget(form.email, { 'attr': {"class":"form-control"}} ) }}
                    </div>
                    <div class="pure-control-group">
                        <label for="username">Nom d'utilisateur</label>
                        {{ form_widget(form.username, { 'attr': {"class":"form-control"}} ) }}
                    </div>
                    <div class="pure-control-group">
                        <label for="surname">Mot de passe</label>
                        {{ form_widget(form.plainPassword.first, { 'attr': {"class":"form-control"}} ) }}
                    </div>
                    <div class="pure-control-group">
                        <label for="surname">Vérification</label>
                        {{ form_widget(form.plainPassword.second, { 'attr': {"class":"form-control"}} ) }}
                    </div>
                    <div class="pure-controls">
                          <input type="submit" class="pure-button pure-button-primary" value='{{ 'registration.submit'|trans }}'/>
                    </div>
                </fieldset>
        </form>
    </div>
</div>
