{% extends "::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block header %}
    <div class="header">
        <h1>Login</h1>
        <h2>Formulaire d'authentification</h2>
    </div>
{% endblock %}

{% block body %}
{% if error %}
    <div>{{ error|trans }}</div>
{% endif %}

<div class="pure-g">
    <div class="pure-u-1-3 centrer">
        <form action="{{ path("fos_user_security_check") }}" method="post" class="pure-form pure-form-aligned">
            <fieldset>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <div class="pure-control-group">
                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>

                <div class="pure-control-group">
                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" name="_password" required="required" />
                </div>

                <div class="pure-controls">
                    <label for="remember_me" class="pure-checkbox">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        {{ 'security.login.remember_me'|trans }}
                    </label>

                    <input class="pure-button pure-button-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                </div>
            </fieldset>
        </form>
    </div>
</div>
{% endblock body %}
