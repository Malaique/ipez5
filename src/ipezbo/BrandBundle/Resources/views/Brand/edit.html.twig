{% extends '::base.html.twig' %}
{% block header %}Editer une marque{% endblock %}
{% block body %}
<div class="pure-g">
    <div class="pure-u-1-3 centrer">
        <form class="pure-form pure-form-aligned" {{ form_enctype(form) }} method="post">
            <fieldset>
                <div class="pure-control-group">
                    <label class="required" for="ipezbo_brandbundle_brand_name" style="display: block;">Nom</label>
                    {{ form_widget(form.name, { 'attr': {"class":"form-control"}} ) }}
                </div>
                <div class="pure-control-group">
                    <label class="required" for="ipezbo_brandbundle_brand_description" style="display: block;">Description</label>
                    {{ form_widget(form.description, { 'attr': {"class":"form-control"}} ) }}
                </div>
            {{ form_widget(form) }}
            <div class="pure-control-group">
                <input class="pure-button pure-button-primary" type="submit">
            </div>
        </form>
            <a class="pure-button" href="{{path('ipezbo_brand_homepage') }}"><- Retour aux marques</a>
        <a href="{{ path('ipezbo_brand_delete', { id : brand.id}) }}" class="pure-button button-error margeButton" id="delete-action">Supprimer la marque {{ brand.name }}</a>
    </div>
</div>

{% endblock %}